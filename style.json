{
  "version": 8,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "tiles": ["https://hfujimura.gitlab.io/caf1801/{z}/{x}/{y}.mvt"],
      "attribution": "&copy; OpenMapTiles &copy; OpenStreetMap contributors",
      "maxzoom": 22
    }
  },
  "glyphs": "https://hfu.github.io/noto-jp/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#0000ff",
        "line-width": 1
      }
    },
    {
      "id": "boundary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ff0000",
        "line-width": 1
      }
    },
     {
      "id": "transportation",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#000000",
        "line-width": 1
      }
    }
  ]
}
